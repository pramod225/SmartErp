@model YuktiSolutions.SmartERP.Areas.Sales.Models.UI.CallActivityListItem

@{
    ViewBag.Title = "Call";
}
<div id="callModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Ajax.BeginForm("SaveActivity", "Activities", new { Area = "Sales", ActivityType = YuktiSolutions.SmartERP.Areas.Sales.Models.Database.ActivityType.Call }, new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnCallSave" },new{ id = "callForm" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="modal-body">
                    <div class="container-fluid">
                        <button type="button" class="glyphicon glyphicon-remove" onclick="OnResetCall()" style="color: #337ab7;float:right;padding: 0;border: none;background: none;outline:none;" data-dismiss="modal"></button>

                        <center><h3>Call Details</h3></center>
                        <div class="form-horizontal ">
                            <div class="form-group row">
                                <div class="col col-lg-12">
                                    @Html.Label("Subject")
                                    @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Subject" } })
                                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col col-lg-12">
                                    @Html.Label("Description")
                                    @Html.TextAreaFor(model => model.Description, 4, 75, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Description" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group row ">
                                <div class="col-md-12">
                                    <input type="submit" value="Save Details" class="btn btn-primary col-lg-push-6" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
