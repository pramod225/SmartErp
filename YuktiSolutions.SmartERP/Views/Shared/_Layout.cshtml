<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Smart ERP</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo/2015.2.902/kendo.common.min.css")
    @Styles.Render("~/Content/kendo/2015.2.902/kendo.default.min.css")

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/Scripts/kendo/2015.2.902/kendo.all.min.js")
    @Scripts.Render("~/Scripts/kendo/2015.2.902/kendo.aspnetmvc.min.js")

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <div class="btn-group app-menu">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-th"></i></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Index","Home",new { Area="Sales" })">Sales</a></li>
                        <li><a href="@Url.Action("Index","Home",new { Area="Marketing" })">Marketing</a></li>
                        <li><a href="@Url.Action("Index","Home",new { Area="Finance" })">Finance</a></li>
                        <li><a href="@Url.Action("Index","Home",new { Area="Human Resources" })">Human Resources</a></li>
                    </ul>
                </div>
                <div class="btn-group">
                    @RenderSection("AreaName", false)
                </div>
            </div>
            <div class="navbar-collapse collapse">
                @RenderSection("AreaMenu",false)
               
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    }
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Smart ERP</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
